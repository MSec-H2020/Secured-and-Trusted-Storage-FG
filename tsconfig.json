{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@config/*": ["config/*"],
      "@plugins/*": ["plugins/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
